@model IEnumerable<Entities.Product>

@{ViewData["Title"] = "Index";}

<section>
    <section>
        <h1>Cart</h1>
        <h3>Here you can see the products in your cart</h3>
    </section>
    
    <hr />
    
    @if (Model != null)
    {
        <div>
            @foreach (var item in Model)
            {
                <div class="row grid-row">
                    <div class="col-6 col-md-2">@Html.DisplayFor(modelItem => item.Title)</div>
                    <div class="col-2 col-md-1">@Html.DisplayFor(modelItem => item.Price)</div>
                </div>
                <a class="btn btn-secondary" asp-action="RemoveProduct" asp-route-id="@item.Id">Remove</a>
                <a class="btn btn-secondary" asp-controller="Comments" asp-action="Index" asp-route-id="@item.Id">Go to product</a>
            }
            <div>
                <a class="btn btn-secondary" asp-action="BuyAll" asp-route-id=@ViewBag["CartId"] >Buy all products</a>
            </div>
        </div>
    }
    else
    {
        <p>Sorry, your cart is empty...</p>
        <a asp-controller="Products" asp-action="Index">Search our products</a>
    }

</section>